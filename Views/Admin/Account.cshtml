@model ProiectFinalASP.Models.User

@{
    ViewBag.Title = "Login";
}

<h2>Log in</h2>

<html>
<body>
    <style>
        td {
            padding: 40px;
        }
    </style>
    <!-- Form that takes some text and a password, sends it to the below script using a button-->
    <form id="myForm">
        <input type="text" id="txtName" name="name" placeholder="Enter your name" required>
        <input type="password" id="txtPassword" name="password" placeholder="Enter your password" required>
        <button type="submit">Submit</button>
    </form>

</body>
</html>

@section scripts{<!-- Script section, takes data from myForm, sends the data to AccountCheck actionresult method in the AdminController class-->
    <script>     
        $(document).ready(function () {
            $("#myForm").submit(function (e) {
                e.preventDefault();
                var name = $("#txtName").val();
                var password = $("#txtPassword").val();

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("AccountCheck", "Admin")",
                    data: { name: name, password: password },
                    success: function (data) {
                        // Handle the response
                        alert(data);
                    },
                    error: function (xhr, status, error) {
                        // Handle the error
                        alert(error);
                    }
                });
            });
        });
    </script>
}
